<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <!-- 양방향 오디오 스트리밍 시작 -->
  <Start>
    <Stream url="wss://unvulnerable-ember-caritative.ngrok-free.dev/stream" track="both_tracks">
      <Parameter name="From" value="{{ From }}" />
      <Parameter name="To" value="{{ To }}" />
      <Parameter name="CallSid" value="{{ CallSid }}" />
    </Stream>
  </Start>
  
  <!-- 고객에게 안내 멘트 -->
  <Say language="ko-KR">안녕하세요 에이담 입니다. 고객님의 전화를 상담사에게 연결하겠습니다. 잠시만 기다려주세요.</Say>
  
  <!-- 실제 서비스에는 상담사 전화번호로 변경하세요 (.env 파일에서 설정) -->
  <Dial>
    <Number>{{ DialPhoneNumber }}</Number>
  </Dial>
</Response>
